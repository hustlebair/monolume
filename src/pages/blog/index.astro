---
import Layout from "@layouts/Layout.astro";
import ThemedBlogCard from "@components/ThemedBlogCard.astro";
import BlogFilter from "@components/BlogFilter.astro";
import BlogHero from "@components/BlogHero";
import { getCollection, type CollectionEntry } from "astro:content";
import { BLOG } from "@consts";

const data = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

type Acc = {
  [year: string]: CollectionEntry<"blog">[];
};

const posts = data.reduce((acc: Acc, post) => {
  const year = post.data.date.getFullYear().toString();
  if (!acc[year]) {
    acc[year] = [];
  }
  acc[year].push(post);
  return acc;
}, {});

const years = Object.keys(posts).sort((a, b) => parseInt(b) - parseInt(a));
---

<Layout title={BLOG.TITLE} description={BLOG.DESCRIPTION}>
  <div class="blog-layout">
    <!-- Hero Section - Full Width -->
    <div class="hero-full-width">
      <BlogHero client:load />
    </div>

    <!-- Content Area -->
    <section id="Blog" class="container mx-auto px-6 pt-12">
      <div>
        <BlogFilter />
        
        <section>
      {
        years.map((year) => (
          <section class="animate space-y-4">
            <h4 class="heading text-2xl lg:text-4xl">{year}</h4>
            <div>
              <ul class="not-prose grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {posts[year].map((post) => (
                  <ThemedBlogCard entry={post} />
                ))}
              </ul>
            </div>
          </section>
        ))
      }
        </section>
      </div>
    </section>
  </div>
</Layout>

<style>
  .blog-layout {
    width: 100%;
    max-width: 100vw;
    position: relative;
    left: 0;
    right: 0;
    margin-left: 0;
    margin-right: 0;
    overflow-x: hidden;
  }

  @media (min-width: 769px) {
    .blog-layout {
      width: 100vw;
      left: 50%;
      right: 50%;
      margin-left: -50vw;
      margin-right: -50vw;
    }
  }

  .hero-full-width {
    width: 100%;
    max-width: 100vw;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
  }
</style>
