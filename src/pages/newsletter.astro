---
import Layout from "@layouts/Layout.astro";
import ThemedBlogCard from "@components/ThemedBlogCard.astro";
import BlogHero from "@components/BlogHero";
import { StarsBackground } from "@components/ui/stars-background";
import { DottedSurface } from "@components/ui/dotted-surface";
import { getCollection, type CollectionEntry } from "astro:content";

const title = "The Uprising - AI Newsletter & Blog | Planet Take Over";
const description = "Weekly transmissions on AI tools, market intelligence, and implementation strategies. Join thousands staying ahead in the AI revolution. Read the latest or subscribe for weekly intel.";

const data = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

type Acc = {
  [year: string]: CollectionEntry<"blog">[];
};

const posts = data.reduce((acc: Acc, post) => {
  const year = post.data.date.getFullYear().toString();
  if (!acc[year]) {
    acc[year] = [];
  }
  acc[year].push(post);
  return acc;
}, {} as Acc);

const years = Object.keys(posts).sort((a, b) => parseInt(b) - parseInt(a));
---

<Layout title={title} description={description}>
  <div class="blog-layout">
    <div class="hero-full-width">
      <div style="position: absolute; inset: 0; width: 100%; height: 100%; z-index: 0;">
        <DottedSurface client:load />
      </div>
      <div style="position: relative; z-index: 10;">
        <BlogHero client:load />
      </div>
    </div>

    <!-- Full-width Stars Background -->
    <div class="w-full relative">
      <StarsBackground 
        client:load 
        starDensity={0.0001}
        allStarsTwinkle={true}
        twinkleProbability={0.6}
        className="z-0"
      />
      
      <!-- Content with container -->
      <section id="Newsletter" class="container mx-auto px-6 pt-12 relative z-10">
        <section>
          {years.map((year) => (
            <section class="animate space-y-4 py-8">
              <h4 class="heading text-2xl lg:text-4xl">{year}</h4>
              <div>
                <ul class="not-prose grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
                  {posts[year].map((post) => (
                    <ThemedBlogCard entry={post} />
                  ))}
                </ul>
              </div>
            </section>
          ))}
        </section>
      </section>
    </div>
  </div>
</Layout>

<style>
  .blog-layout {
    width: 100%;
    max-width: 100vw;
    position: relative;
    left: 0;
    right: 0;
    margin-left: 0;
    margin-right: 0;
    overflow-x: hidden;
    z-index: 1;
  }

  @media (min-width: 769px) {
    .blog-layout {
      width: 100vw;
      left: 50%;
      right: 50%;
      margin-left: -50vw;
      margin-right: -50vw;
    }
  }

  .hero-full-width {
    width: 100%;
    max-width: 100vw;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    position: relative;
    z-index: 1;
  }
</style>
