---
import Layout from "@/layouts/Layout.astro";
import AIToolsHero from "@/features/ai-tools/components/AIToolsHero";
import ImprovedStickyTabs, { categories } from "@/features/ai-tools/components/ImprovedStickyTabs";
import AIToolCard from "@/features/ai-tools/components/AIToolCard.astro";
import { aiTools } from "@/features/ai-tools/data/tools";

// Group tools by category
const toolsByCategory = categories.reduce((acc, category) => {
  acc[category.id] = aiTools
    .filter(tool => tool.categoryId === category.id)
    .sort((a, b) => b.rating - a.rating); // Sort by rating within category
  return acc;
}, {} as Record<string, typeof aiTools>);
---

<Layout title="AI Tools" description="Discover powerful AI tools and resources ranked by performance, usability, and value">
  <div class="ai-tools-layout">
    <!-- Hero Section - Full Width (outside any container) -->
    <div id="hero-section" class="hero-full-width">
      <AIToolsHero client:load />
        </div>

  <!-- Sticky Navigation - Full Width -->
  <div class="sticky-nav-container">
    <ImprovedStickyTabs client:load />
      </div>

  <!-- Content Area with White Background -->
  <div class="ai-tools-page-wrapper">
    <!-- AI Tools Sections by Category -->
    <div class="container mx-auto px-6 pt-0">
      <div class="max-w-6xl mx-auto">
        {categories.map((category) => {
          const categoryTools = toolsByCategory[category.id] || [];
          
          // Skip empty categories
          if (categoryTools.length === 0) return null;
          
          return (
            <section id={`${category.id}-section`} class="category-section">
              {/* Section Header */}
              <div class="section-header">
                <h2 class="section-title">{category.title}</h2>
                <p class="section-description">{category.description}</p>
              </div>
              
              {/* Tools in this category */}
              <div class="space-y-6">
                {categoryTools.map((tool) => (
                  <div class="relative">
            <AIToolCard tool={tool} />
          </div>
        ))}
      </div>
            </section>
          );
        })}

      <!-- Footer Note -->
      <div class="text-center py-12 mt-16">
            <div class="footer-disclosure">
              <p class="disclosure-text">
            <strong>Affiliate Disclosure:</strong> Some links on this page are affiliate links, meaning I may earn a commission if you make a purchase through them. This doesn't affect my reviews or recommendations.
          </p>
              <p class="disclosure-date">
            Last updated: {new Date().toLocaleDateString()}
          </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  /* Override Layout container for full-width hero */
  .ai-tools-layout {
    width: 100%;
    max-width: 100vw;
    position: relative;
    left: 0;
    right: 0;
    margin-left: 0;
    margin-right: 0;
    overflow-x: hidden;
    z-index: 1;
  }

  @media (min-width: 769px) {
    .ai-tools-layout {
      width: 100vw;
      left: 50%;
      right: 50%;
      margin-left: -50vw;
      margin-right: -50vw;
    }
  }

  /* Hero Section - Full Width */
  .hero-full-width {
    width: 100%;
    max-width: 100vw;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    position: relative;
    z-index: 1;
  }

  /* Sticky Navigation Container - Full Width */
  .sticky-nav-container {
    width: 100%;
    max-width: 100vw;
    background: #ffffff;
    overflow-x: hidden;
  }

  :global([data-theme="dark"]) .sticky-nav-container {
    background: #0a0a0f;
  }

  /* Content Area - Back to Centered Layout */
  .ai-tools-page-wrapper {
    min-height: 100vh;
    background: #ffffff;
    width: 100%;
    max-width: 1280px;
    margin: 0 auto;
    padding: 0;
    overflow-x: hidden;
  }

  :global([data-theme="dark"]) .ai-tools-page-wrapper {
    background: #0a0a0f;
  }

  .ai-tools-page-wrapper .container {
    padding-top: 0 !important;
  }

  @media (max-width: 768px) {
    .ai-tools-page-wrapper {
      max-width: 100vw;
    }
  }

  .footer-disclosure {
    background: rgba(0, 0, 0, 0.04);
    backdrop-filter: blur(10px);
    border-radius: 16px;
    padding: 2rem;
    border: 2px dashed rgba(0, 0, 0, 0.15);
    max-width: 42rem;
    margin: 0 auto;
  }

  :global([data-theme="dark"]) .footer-disclosure {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.15);
  }

  .disclosure-text {
    color: #1a1a1a;
    margin-bottom: 1rem;
    font-size: 1rem;
  }

  :global([data-theme="dark"]) .disclosure-text {
    color: #e0e0e0;
  }

  .disclosure-date {
    color: #4a4a4a;
    font-size: 0.875rem;
  }

  :global([data-theme="dark"]) .disclosure-date {
    color: #9ca3af;
  }

  /* Category Sections */
  .category-section {
    padding-top: 0;
    padding-bottom: 2rem;
  }

  .category-section:first-of-type {
    padding-top: 0;
  }

  /* Section Headers */
  .section-header {
    margin: 0 auto 1.5rem;
    padding: 0.5rem 0 0;
    background: none;
    border: none;
    box-shadow: none;
    text-align: center;
    max-width: 48rem;
  }

  .category-section:first-of-type .section-header {
    padding-top: 2rem;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 0.5rem;
    letter-spacing: -0.025em;
  }

  :global([data-theme="dark"]) .section-title {
    color: #ffffff;
  }

  .section-description {
    font-size: 1rem;
    color: #6b7280;
    line-height: 1.6;
    margin: 0;
  }

  :global([data-theme="dark"]) .section-description {
    color: #9ca3af;
  }

  /* Responsive section headers */
  @media (max-width: 768px) {
    .ai-tools-page-wrapper .container {
      padding-left: 0.75rem;
      padding-right: 0.75rem;
    }

    .category-section {
      padding-bottom: 1.5rem;
    }

    .section-header {
      margin-bottom: 1.25rem;
      padding-top: 0.5rem;
    }

    .category-section:first-of-type .section-header {
      padding-top: 1.5rem;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .section-description {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .ai-tools-page-wrapper .container {
      padding-left: 0.5rem;
      padding-right: 0.5rem;
    }

    .category-section {
      padding-bottom: 1.25rem;
    }

    .section-header {
      padding-top: 0.5rem;
    }

    .section-title {
      font-size: 1.35rem;
    }

    .section-description {
      font-size: 0.85rem;
    }
  }
</style>
