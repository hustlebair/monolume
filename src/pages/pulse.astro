---
import Layout from "@layouts/Layout.astro";
import PulseHero from "@features/pulse/components/PulseHero";
import { getCollection } from "astro:content";
import "@features/pulse/styles/PulseCard.css";

const title = "The Pulse";
const description = "Real-time AI intel. Daily quick hits on the latest AI developments, tools, and breakthroughs.";

// Fetch pulse posts from content collection
let pulsePosts;
try {
  pulsePosts = (await getCollection("pulse"))
    .filter((post) => !post.data.draft)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
  console.log("Pulse posts loaded:", pulsePosts.length);
} catch (error) {
  console.error("Error loading pulse posts:", error);
  pulsePosts = [];
}
---

<Layout title={title} description={description}>
  <div class="pulse-layout">
    <!-- Hero Section - Full Width -->
    <div class="hero-full-width">
      <PulseHero client:load />
    </div>

    <!-- Content Area -->
    <section id="Pulse" class="pulse-content-section">
      <div class="pulse-container">
        <!-- Debug info -->
        {pulsePosts.length === 0 && (
          <div style="padding: 2rem; text-align: center; color: red;">
            <p>No pulse posts found. Check console for errors.</p>
          </div>
        )}

        <!-- Pulse Posts Grid -->
        <div class="pulse-grid">
          {pulsePosts.map((post) => (
            <article class="pulse-card" data-card="pulse">
              <a href={`/pulse/${post.id}`} class="pulse-card-link">
                <div class="pulse-card-content">
                  <div class="pulse-card-header">
                    <time class="pulse-date">
                      {post.data.date.toLocaleDateString('en-US', { 
                        month: 'short', 
                        day: 'numeric',
                        year: 'numeric'
                      })}
                    </time>
                    <div class="pulse-tags">
                      {post.data.tags && post.data.tags.map((tag: string) => (
                        <span class="pulse-tag">{tag}</span>
                      ))}
                    </div>
                  </div>
                  
                  <h2 class="pulse-title">{post.data.title}</h2>
                  
                  <p class="pulse-content">{post.data.description}</p>
                  
                  <div class="pulse-read-more">
                    <span class="read-more-text">Read full update</span>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>

        <!-- Coming Soon Message -->
        <div class="coming-soon">
          <p>âš¡ More pulse updates coming daily</p>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .pulse-layout {
    width: 100%;
    max-width: 100vw;
    position: relative;
    left: 0;
    right: 0;
    margin-left: 0;
    margin-right: 0;
    overflow-x: hidden;
    z-index: 1;
  }

  @media (min-width: 769px) {
    .pulse-layout {
      width: 100vw;
      left: 50%;
      right: 50%;
      margin-left: -50vw;
      margin-right: -50vw;
    }
  }

  .hero-full-width {
    width: 100%;
    max-width: 100vw;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    position: relative;
    z-index: 1;
  }

  .pulse-content-section {
    background: transparent;
    width: 100%;
    padding: 3rem 1.5rem 5rem;
  }

  [data-theme="light"] .pulse-content-section {
    background: #f9fafb;
    min-height: calc(100vh - 200px);
  }

  .pulse-container {
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    padding: 0;
  }

  .pulse-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-bottom: 3rem;
    width: 100%;
  }

  .pulse-card {
    display: flex;
    flex-direction: column;
    border-radius: 12px;
    padding: 0.5rem 1rem 1rem;
    transition: all 0.3s ease;
    position: relative;
    box-sizing: border-box;
    width: 100%;
  }

  [data-theme="light"] .pulse-date {
    color: #555;
  }

  [data-theme="light"] .pulse-tag {
    background: rgba(255, 76, 76, 0.15);
    color: #c93939;
  }

  [data-theme="light"] .pulse-title {
    color: #1a1a1a;
  }

  [data-theme="light"] .pulse-content {
    color: #4a4a4a;
  }

  .pulse-card-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    text-align: left;
    height: 100%;
  }

  .pulse-card-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
    flex-wrap: wrap;
  }

  .pulse-date {
    font-family: "Space Mono", "Courier Prime", monospace;
    font-size: 0.875rem;
    color: #888;
    white-space: nowrap;
  }

  .pulse-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .pulse-tag {
    background: rgba(255, 76, 76, 0.2);
    color: #FF4C4C;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .pulse-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: var(--color-foreground);
    line-height: 1.3;
    text-align: left;
  }

  .pulse-content {
    font-size: 0.9rem;
    line-height: 1.5;
    color: var(--color-secondary);
    text-align: left;
    margin-bottom: 0.75rem;
  }

  .coming-soon {
    text-align: center;
    padding: 2rem;
    background: rgba(255, 76, 76, 0.1);
    border: 2px dashed rgba(255, 76, 76, 0.3);
    border-radius: 12px;
    margin-top: 2rem;
  }

  [data-theme="light"] .coming-soon {
    background: rgba(255, 76, 76, 0.05);
    border: 2px dashed rgba(255, 76, 76, 0.4);
  }

  .coming-soon p {
    font-family: "Space Mono", "Courier Prime", monospace;
    font-size: 1.125rem;
    color: #FF4C4C;
    margin: 0;
  }

  @media (max-width: 1024px) {
    .pulse-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.25rem;
    }
  }

  @media (max-width: 768px) {
    .pulse-content-section {
      padding: 2rem 1rem 4rem;
    }

    .pulse-container {
      padding: 0;
    }

    .pulse-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .pulse-card {
      padding: 0.5rem 0.875rem 0.875rem;
    }

    .pulse-title {
      font-size: 1.125rem;
    }

    .pulse-content {
      font-size: 0.875rem;
    }
  }

  @media (max-width: 480px) {
    .pulse-content-section {
      padding: 1.5rem 0.75rem 3rem;
    }

    .pulse-card {
      padding: 0.5rem 0.75rem 0.75rem;
    }

    .pulse-title {
      font-size: 1rem;
    }

    .pulse-content {
      font-size: 0.8125rem;
    }

    .pulse-date {
      font-size: 0.75rem;
    }

    .pulse-tag {
      font-size: 0.625rem;
      padding: 0.15rem 0.5rem;
    }
  }

  .pulse-card-link {
    text-decoration: none;
    color: inherit;
    display: block;
    height: 100%;
    transition: transform 0.2s ease;
  }

  .pulse-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
  }

  .pulse-read-more {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: auto;
    padding-top: 1rem;
    font-size: 0.9rem;
    font-weight: 500;
    color: #FF4C4C;
    transition: gap 0.2s ease;
  }

  .pulse-card:hover .pulse-read-more {
    gap: 0.75rem;
  }

  .pulse-read-more svg {
    transition: transform 0.2s ease;
  }

  .pulse-card:hover .pulse-read-more svg {
    transform: translateX(2px);
  }

  [data-theme="light"] .pulse-read-more {
    color: #c93939;
  }
</style>
