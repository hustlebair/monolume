---
import Layout from "@layouts/Layout.astro";
import PulseHero from "@components/PulseHero";

const title = "The Pulse";
const description = "Real-time AI intel. Daily quick hits on the latest AI developments, tools, and breakthroughs.";

// Placeholder pulse posts - you'll add real ones later
const pulsePosts = [
  {
    id: 1,
    date: new Date(),
    title: "OpenAI Releases GPT-5 Preview",
    content: "New model shows 40% improvement in reasoning tasks. Early access rolling out to Plus users.",
    videoEmbed: null,
    tags: ["LLM", "OpenAI"]
  },
  {
    id: 2,
    date: new Date(Date.now() - 86400000),
    title: "Midjourney V7 Alpha Drops",
    content: "Photorealism reaches new heights. Text rendering finally works consistently.",
    videoEmbed: null,
    tags: ["Image Gen"]
  }
];
---

<Layout title={title} description={description}>
  <div class="pulse-layout">
    <!-- Hero Section - Full Width -->
    <div class="hero-full-width">
      <PulseHero client:load />
    </div>

    <!-- Content Area -->
    <section id="Pulse" class="pulse-content-section">
      <div class="pulse-container">
        <!-- Pulse Posts Grid -->
        <div class="pulse-grid">
          {pulsePosts.map((post) => (
            <article class="pulse-card">
              <div class="pulse-card-content">
                <div class="pulse-card-header">
                  <time class="pulse-date">
                    {post.date.toLocaleDateString('en-US', { 
                      month: 'short', 
                      day: 'numeric',
                      year: 'numeric'
                    })}
                  </time>
                  <div class="pulse-tags">
                    {post.tags.map((tag) => (
                      <span class="pulse-tag">{tag}</span>
                    ))}
                  </div>
                </div>
                
                <h2 class="pulse-title">{post.title}</h2>
                
                <p class="pulse-content">{post.content}</p>
              </div>
              
              {post.videoEmbed && (
                <div class="pulse-video-container">
                  <div class="pulse-video" set:html={post.videoEmbed} />
                </div>
              )}
            </article>
          ))}
        </div>

        <!-- Coming Soon Message -->
        <div class="coming-soon">
          <p>âš¡ More pulse updates coming daily</p>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .pulse-layout {
    width: 100%;
    max-width: 100vw;
    position: relative;
    left: 0;
    right: 0;
    margin-left: 0;
    margin-right: 0;
    overflow-x: hidden;
  }

  @media (min-width: 769px) {
    .pulse-layout {
      width: 100vw;
      left: 50%;
      right: 50%;
      margin-left: -50vw;
      margin-right: -50vw;
    }
  }

  .hero-full-width {
    width: 100%;
    max-width: 100vw;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
  }

  .pulse-content-section {
    background: transparent;
    width: 100%;
    padding: 3rem 1.5rem 5rem;
  }

  [data-theme="light"] .pulse-content-section {
    background: #f9fafb;
    min-height: calc(100vh - 200px);
  }

  .pulse-container {
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    padding: 0;
  }

  .pulse-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 3rem;
    align-items: stretch;
    width: 100%;
  }

  .pulse-card {
    display: flex;
    gap: 1.5rem;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.05) 0%, rgba(255, 255, 255, 0.02) 100%);
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 12px;
    padding: 1.5rem;
    transition: all 0.3s ease;
    height: 250px;
    position: relative;
    box-sizing: border-box;
    width: 100%;
  }

  .pulse-card:hover {
    border-color: rgba(255, 76, 76, 0.7);
    box-shadow: 0 8px 32px rgba(255, 76, 76, 0.2);
    transform: translateY(-2px);
  }

  /* Light theme styles */
  [data-theme="light"] .pulse-card {
    background: #ffffff !important;
    border: 2px solid #6b7280 !important;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1) !important;
  }

  [data-theme="light"] .pulse-card:hover {
    border-color: #FF4C4C !important;
    box-shadow: 0 4px 16px rgba(255, 76, 76, 0.3), 0 2px 8px rgba(0, 0, 0, 0.15) !important;
  }
  
  /* Extra specificity for light theme borders */
  [data-theme="light"] article.pulse-card {
    border-width: 2px !important;
    border-style: solid !important;
    border-color: #6b7280 !important;
  }

  [data-theme="light"] .pulse-date {
    color: #555;
  }

  [data-theme="light"] .pulse-tag {
    background: rgba(255, 76, 76, 0.15);
    color: #c93939;
  }

  [data-theme="light"] .pulse-title {
    color: #1a1a1a;
  }

  [data-theme="light"] .pulse-content {
    color: #4a4a4a;
  }

  .pulse-card-content {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    text-align: left;
  }

  .pulse-card-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .pulse-date {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.875rem;
    color: #888;
    white-space: nowrap;
  }

  .pulse-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .pulse-tag {
    background: rgba(255, 76, 76, 0.2);
    color: #FF4C4C;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .pulse-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    color: var(--color-foreground);
    line-height: 1.3;
    text-align: left;
  }

  .pulse-content {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--color-secondary);
    text-align: left;
  }

  .pulse-video-container {
    flex-shrink: 0;
    width: 200px;
    display: flex;
    align-items: center;
  }

  .pulse-video {
    width: 100%;
    aspect-ratio: 9 / 16;
    border-radius: 8px;
    overflow: hidden;
    background: #000;
  }

  .pulse-video :global(iframe),
  .pulse-video :global(blockquote) {
    width: 100% !important;
    height: 100% !important;
    max-width: 100% !important;
    border-radius: 8px;
  }

  .coming-soon {
    text-align: center;
    padding: 2rem;
    background: rgba(255, 76, 76, 0.1);
    border: 2px dashed rgba(255, 76, 76, 0.3);
    border-radius: 12px;
    margin-top: 2rem;
  }

  [data-theme="light"] .coming-soon {
    background: rgba(255, 76, 76, 0.05);
    border: 2px dashed rgba(255, 76, 76, 0.4);
  }

  .coming-soon p {
    font-family: "IBM Plex Mono", monospace;
    font-size: 1.125rem;
    color: #FF4C4C;
    margin: 0;
  }

  @media (max-width: 768px) {
    .pulse-content-section {
      padding: 2rem 1rem 4rem;
    }

    .pulse-container {
      padding: 0;
    }

    .pulse-grid {
      gap: 1.5rem;
    }

    .pulse-card {
      flex-direction: column;
      padding: 1.25rem;
      height: auto;
      min-height: 250px;
    }

    .pulse-title {
      font-size: 1.25rem;
    }

    .pulse-content {
      font-size: 0.9375rem;
    }

    .pulse-video-container {
      width: 100%;
      max-width: 300px;
      margin: 0 auto;
    }
  }

  @media (max-width: 480px) {
    .pulse-content-section {
      padding: 1.5rem 0.75rem 3rem;
    }
  }
</style>

