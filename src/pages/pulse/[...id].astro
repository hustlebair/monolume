---
import Layout from "@layouts/Layout.astro";
import { getCollection, render, type CollectionEntry } from "astro:content";
import FormattedDate from "@components/FormattedDate.astro";
import "@features/pulse/styles/PulseCard.css";

export async function getStaticPaths() {
  const posts = (await getCollection("pulse"))
    .filter((post) => !post.data.draft)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
  return posts.map((post) => ({
    params: { id: post.id },
    props: post,
  }));
}
type Props = CollectionEntry<"pulse">;

const post = Astro.props;
const { Content } = await render(post);
---

<Layout title={post.data.title} description={post.data.description}>
  <div class="container mx-auto space-y-8 pt-18 px-6">
    <button
      class="flex gap-2 items-center text-primary hover:text-[#5AA469] cursor-pointer pl-2 my-6 transition-colors"
      title="back"
      id="back-button"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="28"
        height="28"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-move-left-icon lucide-move-left"
        ><path d="M6 8L2 12L6 16"></path><path d="M2 12H22"></path></svg
      >
      <span>Back to Pulse</span>
    </button>
    <div
      class="flex justify-between md:items-center pb-4 border-b border-dashed border-secondary gap-4 flex-col md:flex-row"
    >
      <div class="space-y-4">
        <h1 class="heading text-3xl md:text-5xl uppercase">
          {post.data.title}
        </h1>
        <p class="text-lg">{post.data.description}</p>
        <div class="flex gap-4 items-center">
          <p class="text-secondary">
            <FormattedDate date={post.data.date} />
          </p>
          {post.data.tags && (
            <div class="flex gap-2">
              {post.data.tags.map((tag: string) => (
                <span class="pulse-tag">{tag}</span>
              ))}
            </div>
          )}
        </div>
      </div>
    </div>

    <!-- Video Embed if exists -->
    {post.data.videoEmbed && (
      <div class="pulse-video-wrapper">
        <div class="pulse-video-container" set:html={post.data.videoEmbed} />
      </div>
    )}

    <article class="prose prose-neutral dark:prose-invert prose-img:mx-auto prose-img:my-auto text-lg leading-8 prose-headings:font-bold prose-strong:text-foreground mx-auto text-secondary prose-a:underline-offset-2 prose-a:text-sky-300 hover:prose-a:text-sky-200 px-3 flex-2 mb-18" style="max-width: 65ch;">
      <Content />
    </article>
  </div>

  <script is:inline>
    document.getElementById("back-button").addEventListener("click", () => {
      window.history.back();
    });
  </script>
</Layout>

<style>
  .pulse-video-wrapper {
    display: flex;
    justify-content: center;
    width: 100%;
    margin: 2rem 0;
  }

  .pulse-video-container {
    max-width: 605px;
    width: 100%;
  }

  .pulse-video-container :global(blockquote) {
    margin: 0 auto;
  }
</style>

