---
import OrbitingSkills from './OrbitingSkills';
import ThemeAwareParticles from './ThemeAwareParticles';
---

<section class="w-full py-24 relative z-20 bg-background overflow-visible">
  <!-- Particles background with overflow hidden -->
  <div class="absolute inset-0 z-0 overflow-hidden">
    <ThemeAwareParticles client:load />
  </div>

  <!-- Content container -->
  <div class="container mx-auto px-6 relative z-10" style="max-width: 1200px;">
    <div class="text-center relative z-30 pointer-events-auto mb-5">
      <h2 class="heading text-3xl md:text-4xl lg:text-5xl text-foreground mb-4">
        What The Platform Does
      </h2>
      <p class="text-lg md:text-xl text-secondary max-w-3xl mx-auto" style="font-family: 'Space Mono', 'Courier Prime', monospace;">
        Master modern tools and build systems that scale. Learn the tech stack that powers the future.
      </p>
    </div>
    
    <div class="flex justify-center items-center overflow-visible relative">
      <OrbitingSkills client:load />
    </div>
  </div>
</section>

