---
import { SITE, SOCIALS } from "@consts";
import { getCollection, type CollectionEntry } from "astro:content";

const Projects: CollectionEntry<"projects">[] = (
  await getCollection("projects")
).slice(0, 3);
---

<footer class="container mx-auto rounded-t-[80px] p-10 space-y-8 text-white bg-cover bg-center bg-no-repeat" style="background-image: url('/gradient_footer.jpg');">
  <div
    class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-6"
  >
    <h2 class="text-5xl lg:text-9xl uppercase">{SITE.TITLE}</h2>
    <p class="text-2xl lg:text-3xl max-w-[760px]">
      AI is the new electricity that will improve all areas of human life.
    </p>
  </div>
  <div class="flex flex-col sm:flex-row sm:flex-wrap justify-between gap-10">
    <div>
      <h3 class="mb-2 text-xl">Contact</h3>
      <ul>
        <li><a href="mailto:someone@example.com">{SITE.EMAIL}</a></li>
      </ul>
    </div>
    <div>
      <h3 class="mb-2 text-xl">Navigation</h3>
      <ul class="space-y-1 text-white">
        <li><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/blog">Blog</a></li>
        <li><a href="/projects">Projects</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </div>
    <div>
      <h3 class="mb-2 text-xl">Socials</h3>
      <ul class="space-y-1 text-white">
        {
          SOCIALS.map((link) => (
            <li>
              <a href={link.HREF}>{link.NAME}</a>
            </li>
          ))
        }
      </ul>
    </div>
    <div>
      <h3 class="mb-2 text-xl">Projects</h3>
      <ul class="space-y-1 text-white">
        {
          Projects.map((project) => (
            <li>
                <a href=`/projects/${project.id}`>{project.data.title}</a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
  <span class="block text-center text-sm opacity-70">
    Â© {SITE.TITLE}. 
  </span>
</footer>
